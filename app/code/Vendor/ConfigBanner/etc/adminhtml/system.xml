<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config/etc/system_file.xsd">
    <system>
        <section id="custom_banner" translate="label" type="text" sortOrder="900" show_in_default="1" show_in_website="1" show_in_store="1">
            <label>首页横幅设置</label>
            <tab>general</tab>
            <resource>Vendor_ConfigBanner::config</resource>
            <group id="settings" translate="label" type="text" sortOrder="10" show_in_default="1" show_in_website="1" show_in_store="1">
                <label>基本设置</label>

                <!-- 开关字段 -->
                <field id="enable" translate="label" type="select" sortOrder="10" show_in_default="1" show_in_website="1" show_in_store="1">
                    <label>是否显示横幅</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <default>1</default>
                </field>

                <!-- 文本字段 -->
                <field id="message" translate="label" type="textarea" sortOrder="20" show_in_default="1" show_in_website="1" show_in_store="1">
                    <label>横幅文字内容</label>
                    <default>欢迎光临我们的店铺！</default>
                </field>

            </group>
        </section>
    </system>
</config>

